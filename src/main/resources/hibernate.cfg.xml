<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
    <session-factory>

        <!-- Configuration de la connexion PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/cytech_entreprise</property>
        <property name="hibernate.connection.username">cytech_user</property>
        <property name="hibernate.connection.password">CyT3ch2025!</property>

        <!-- Dialecte PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Configuration générale -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Gestion des sessions -->
        <property name="hibernate.current_session_context_class">thread</property>

        <!-- Mapping des classes d'entités -->
        <mapping class="fr.projetjee.model.User"/>
        <mapping class="fr.projetjee.model.Project"/>
        <mapping class="fr.projetjee.model.Payslip"/>

    </session-factory>
</hibernate-configuration>
